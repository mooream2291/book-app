<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>newBookArr</title>
    <link rel="stylesheet" href="/styles/layout.css">
</head>
<body>
    <!-- shows results from homepagesearch -->
    <!-- select.png wireframe -->
    <main>
    <h1>Best Books!</h1>
    <h2>Search Results</h2>
    <ul>
        <% results.forEach(book => { %>
        <li>
        <img src='<%= book.coverArt %>'>
        <h3><%= book.title %></h3>
        <h4><%= book.author %></h4>
        <h5><%= book.description %></h5>
      <form id="create-form" action="/addNewbook" method="post">
          <fieldset>
              <button type="submit">Select this book</button>
              <input type="hidden" value="<%= book.coverArt %>"name="imageLinks">
              <input type="hidden" value="<%= book.title %>"name="title">
              <input type="hidden" value="<%= book.author %>"name="authors">
              <input type="hidden" value="<%= book.description%>"name="description">
              <input type="hidden" value="<%= book.isbn %>"name="industryIdentifiers">
              <input type="hidden" value="<%= book.bookshelf %>"name="categories">
          </fieldset>
      </form>
        </li>
        <% }) %>
      </ul>
    </main>
</body>
</html>